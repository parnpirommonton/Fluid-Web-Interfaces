<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <TextBox Watermark="Search with name..." Classes="DefaultATextBox"/>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    
    <Style Selector="TextBox.DefaultATextBox">
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="Foreground" Value="#aaa"/>
        <Setter Property="BorderBrush" Value="{StaticResource ActiveInstancesSolidColorBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    <Style Selector="TextBox.DefaultATextBox:pointerover /template/ Border">
        <Setter Property="BorderBrush" Value="{StaticResource ActiveInstancesSolidColorBrush}"/>
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <Style Selector="TextBox.DefaultBTextBox">
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="Foreground" Value="#aaa"/>
        <Setter Property="BorderBrush" Value="{StaticResource MockEndpointsSolidColorBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    <Style Selector="TextBox.DefaultBTextBox:pointerover /template/ Border">
        <Setter Property="BorderBrush" Value="{StaticResource MockEndpointsSolidColorBrush}"/>
        <Setter Property="Background" Value="#fff"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
</Styles>
